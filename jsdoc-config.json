{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./demo/src", "./README.md"]
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "idInHeadings": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true,
            "includeDate": false
        }
    },
    "opts": {
        "encoding": "utf8",
        "destination": "demo/output",
        "recurse": true,
        "template": "./",
        "theme_opts": {
            "langNames": false,
            "project": {
                "title": "clean-jsdoc",
                "version": "1.0.0",
                "repo": "https://github.com/rdipardo/clean-jsdoc-theme"
            },
            "meta": [
                "<meta name=\"author\" content=\"Robert Di Pardo\">",
                "<meta name=\"description\" content=\"A feature-enhanced fork of clean-jsdoc-theme\">",
                "<meta name=\"attribution\" content=\"Favicon made by http://www.freepik.com from https://www.flaticon.com\">",
                "<link rel=\"shortcut icon\" type=\"image/x-icon\" href=\"img/html-5.png\">"
            ],
            "create_style": ".readme img { max-width: 900px; }"
        }
    }
}
