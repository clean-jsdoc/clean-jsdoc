{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./demo/src", "./README.md"]
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true,
            "includeDate": false
        }
    },
    "opts": {
        "encoding": "utf8",
        "destination": "demo/output",
        "recurse": true,
        "template": "./",
        "theme_opts": {
            "project": {
                "title": "clean-jsdoc",
                "version": "2.2.14.01",
                "repo": "https://github.com/rdipardo/clean-jsdoc-theme"
            },
            "meta": [
                "<meta name=\"author\" content=\"Robert Di Pardo\">",
                "<meta name=\"description\" content=\"A stylish fork of clean-jsdoc-theme\">",
                "<meta name=\"attribution\" content=\"Favicon made by http://www.freepik.com from https://www.flaticon.com\">",
                "<link rel=\"shortcut icon\" type=\"image/x-icon\" href=\"img/html-5.png\">"
            ]
        }
    },
    "markdown.hardwrap": true,
    "markdown": {
        "hardwrap": true
    }
}
