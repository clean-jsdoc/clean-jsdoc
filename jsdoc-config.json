{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./demo/src", "./README.md"]
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "idInHeadings": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true,
            "includeDate": false
        }
    },
    "opts": {
        "encoding": "utf8",
        "destination": "demo/output",
        "recurse": true,
        "template": "./",
        "theme_opts": {
            "langNames": false,
            "project": {
                "title": "clean-jsdoc",
                "version": "4.1.1",
                "repo": "https://github.com/rdipardo/clean-jsdoc-theme"
            },
            "meta": [
                {
                    "name": "author",
                    "content": "Robert Di Pardo"
                },
                {
                    "name": "description",
                    "content": "A style-conscious fork of clean-jsdoc-theme"
                },
                {
                    "name": "attribution",
                    "content": "Favicon made by https://www.freepik.com from https://www.flaticon.com"
                }
            ],
            "asset_paths" : [ "img", "../does/not/exist" ],
            "remote_assets": [
                {
                    "href": "https://raw.githubusercontent.com/rdipardo/clean-jsdoc-theme/c66f2cb8e2592b7a0185bf2e6160bcdd698063dd/img/html-5.png",
                    "type": "image/x-icon"
                }
            ],
            "overlay_scrollbar": {
                "options": {
                    "autoUpdate": false
                }
            },
            "inline_style": ".readme img { max-width: 900px; }",
            "codepen": {
                "options": {
                    "editors": "001",
                    "js_pre_processor": "babel"
                }
            }
        }
    }
}
